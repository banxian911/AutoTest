<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/testItemNo"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />
       <CheckBox
            android:id="@+id/cb_test"
            android:layout_width="40dp"
            android:layout_height="54dp"
            android:background="@drawable/ck_selector"
            android:button="@null"
            android:layout_alignParentRight="true" />
       <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/testItemNo"
            android:layout_toLeftOf="@id/cb_test"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:gravity="center">
           <TextView
            android:id="@+id/testItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />
           <TextView
            android:id="@+id/testItem_des"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:layout_marginTop="0dp"
            android:lineSpacingExtra="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray" />
       </LinearLayout>

    </RelativeLayout>
</LinearLayout>
